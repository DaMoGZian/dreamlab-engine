{
  "tasks": {
    "build:web": "deno run -A ./_build.ts",
    "build:tailwind": "deno run -A npm:tailwindcss -i ./web/tailwind.css -o ./web/tw-generated.css",
    "build": "deno task build:tailwind & deno task build:web",
    "watch:web": "deno run -A ./_build.ts --watch",
    "watch:tailwind": "deno run -A npm:tailwindcss -i ./web/tailwind.css -o ./web/tw-generated.css --watch",
    "serve": "deno run -A jsr:@std/http@0.224.0/file-server --port 5173 web",
    "dev": "deno task watch:tailwind & deno task watch:web && fg"
  },
  "imports": {
    "@dreamlab/engine": "../engine/mod.ts",
    "@dreamlab/engine/internal": "../engine/internal.ts",
    "@dreamlab/vendor/": "../engine/_deps/",
    "@dreamlab/proto/": "../proto/",
    "@dreamlab/scene": "../scene-graph/mod.ts",
    "@radix-ui/react-tooltip": "npm:@radix-ui/react-tooltip@1.1.1",
    "@tanstack/react-query": "npm:@tanstack/react-query@5.51.1",
    "@types/react@18.3.1/jsx-runtime": "npm:@types/react@18.3.1/jsx-runtime",
    "clsx": "npm:clsx@2.1.1",
    "jotai": "npm:jotai@2.8.3",
    "lucide-react": "npm:lucide-react@0.395.0",
    "react": "npm:react@18.3.1",
    "react-dom": "npm:react-dom@18.3.1",
    "react-reverse-portal": "npm:react-reverse-portal@^2.1.2",
    "tailwind-merge": "npm:tailwind-merge@2.3.0",
    "tailwindcss": "npm:tailwindcss@^3.4.4"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "lib": ["deno.window", "dom"],
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react@18.3.1"
  },
  "lint": {
    "rules": {
      "exclude": ["no-window"]
    }
  }
}
