{
  "tasks": {
    "build": "deno run -A ./_build.ts",
    "watch": "deno run -A ./_build.ts --watch",
    "serve": "deno run -A jsr:@std/http@0.224.0/file-server --port 3026 web"
  },
  "imports": {
    "@dreamlab/engine": "../engine/mod.ts",
    "@dreamlab/vendor/": "../engine/_deps/",

    "react": "https://esm.sh/react@18.3.1",
    "react/": "https://esm.sh/react@18.3.1/",
    "react-dom": "https://esm.sh/react-dom@18.3.1",
    "react-dom/": "https://esm.sh/react-dom@18.3.1/",

    "clsx": "npm:clsx@2.1.1",
    "tailwind-merge": "npm:tailwind-merge@2.3.0"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "react",
    "lib": ["deno.window", "dom"]
  },
  "fmt": {
    "lineWidth": 120,
    "singleQuote": false,
    "semiColons": true,
    "useTabs": false,
    "indentWidth": 2
  },
  "lint": {
    "rules": { "exclude": ["no-window"] }
  }
}
