{
  "name": "@dreamlab.gg/core",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./entities": {
      "import": "./dist/entities.js",
      "types": "./dist/entities.d.ts"
    },
    "./input": {
      "import": "./dist/input.js",
      "types": "./dist/input.d.ts"
    },
    "./math": {
      "import": "./dist/math.js",
      "types": "./dist/math.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "check": "tsc --noEmit --skipLibCheck",
    "lint": "prettier --check . && eslint src --ext ts",
    "format": "prettier --write . && eslint src --ext ts --fix",
    "fmt": "npm run format",
    "test": "npm run check && npm run lint",
    "prepack": "npm run test && npm run build"
  },
  "devDependencies": {
    "@lolpants/eslint-config": "^0.4.1",
    "@types/matter-js": "^0.18.4",
    "eslint": "^8.41.0",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "matter-js": "^0.19.0",
    "pixi.js": "^7.2.4",
    "type-fest": "^3.11.1",
    "zod": "^3.21.4"
  }
}
